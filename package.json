{
  "name": "portfolio",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build:stats": "ng build --stats-json",
    "build:analyze": "ng build --stats-json && ng analytics off && npx webpack-bundle-analyzer dist/portfolio/stats.json --no-open --report dist/bundle-report.html",
    "build:source-map": "ng build --source-map && npx source-map-explorer dist/portfolio/*.js",
    "build:verbose": "ng build --verbose",
    "build:profile": "ng build --progress --stats-json --source-map",
    "stats:read": "ng build --stats-json && node scripts/green-stats.js",
    "stats:file-sizes": "ng build && ls -lah dist/portfolio/*.{js,css} | awk '{print $5 \"\\t\" $9}' | column -t",
    "stats:debug": "ng build --stats-json && node -e \"const stats = require('./dist/portfolio/stats.json'); console.log('ðŸ“Š Stats Structure Debug:'); console.log('Available keys:', Object.keys(stats)); if (stats.assets) console.log('Assets:', stats.assets.slice(0,3)); if (stats.chunks) console.log('Chunks:', stats.chunks.slice(0,2)); if (stats.modules) console.log('Modules count:', stats.modules.length);\"",
    "stats:simple": "ng build --stats-json --verbose"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/cdk": "^17.3.10",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/material": "^17.3.10",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "aos": "^2.3.4",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.6",
    "@angular/cli": "^17.0.6",
    "@angular/compiler-cli": "^17.0.0",
    "@types/aos": "^3.0.7",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.2.2"
  }
}
